{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "moduleDetection": "force"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}
